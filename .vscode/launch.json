{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension (vscode-extension)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/vscode-extension"
      ],
      "outFiles": [
        "${workspaceFolder}/vscode-extension/out/**/*.js"
      ]
    },
    {
      "name": "Debug Core",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "args": [
        "${workspaceFolder}/core/src/dev_buildIndex.ts",
        "/path/to/test/project"
      ],
      "cwd": "${workspaceFolder}/core",
      "console": "integratedTerminal"
    }
  ]
}
