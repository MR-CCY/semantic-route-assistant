{
  "name": "semantic-route-assistant",
  "displayName": "Semantic Route Assistant",
  "description": "VS Code extension for building semantic route index stubs.",
  "version": "0.0.1",
  "publisher": "your-publisher",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:semanticRoute.buildIndex",
    "onCommand:semanticRoute.configureLLM",
    "onCommand:semanticRoute.updateIndex",
    "onCommand:semanticRoute.searchSkills"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "semanticRoute.configureLLM",
        "title": "Semantic Route: Configure LLM"
      },
      {
        "command": "semanticRoute.buildIndex",
        "title": "Semantic Route: Build Index"
      },
      {
        "command": "semanticRoute.updateIndex",
        "title": "Semantic Route: Update Index"
      },
      {
        "command": "semanticRoute.searchSkills",
        "title": "Semantic Route: Search Skill Blocks"
      }
    ],
    "configuration": {
      "title": "Semantic Route",
      "properties": {
        "semanticRoute.llm.provider": {
          "type": "string",
          "default": "",
          "description": "LLM 提供方（openai/qwen/gemini）。留空将禁用 LLM。"
        },
        "semanticRoute.llm.activeProfile": {
          "type": "string",
          "default": "",
          "description": "当前启用的 LLM 配置 ID。"
        },
        "semanticRoute.llm.profiles": {
          "type": "array",
          "default": [],
          "description": "LLM 配置列表（由 Configure LLM 命令管理）。",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "label": {
                "type": "string"
              },
              "provider": {
                "type": "string"
              },
              "model": {
                "type": "string"
              },
              "baseUrl": {
                "type": "string"
              },
              "systemPrompt": {
                "type": "string"
              },
              "userPrompt": {
                "type": "string"
              }
            }
          }
        },
        "semanticRoute.llm.enabled": {
          "type": "boolean",
          "default": true,
          "description": "启用或禁用 LLM。"
        },
        "semanticRoute.llm.model": {
          "type": "string",
          "default": "",
          "description": "LLM 模型名称。"
        },
        "semanticRoute.llm.briefConcurrency": {
          "type": "number",
          "default": 4,
          "description": "生成 brief 时的并发数量。"
        },
        "semanticRoute.llm.baseUrl": {
          "type": "string",
          "default": "",
          "description": "可选的 API Base URL。"
        },
        "semanticRoute.llm.systemPrompt": {
          "type": "string",
          "default": "",
          "description": "可选的 System Prompt。"
        },
        "semanticRoute.llm.userPrompt": {
          "type": "string",
          "default": "",
          "description": "可选的 User Prompt 模板（支持占位符）。"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "echo \"No lint configured\"",
    "pretest": "npm run compile",
    "test": "echo \"No tests configured\""
  },
  "dependencies": {
    "semantic-route-assistant-core": "file:../core",
    "semantic-route-core": "file:../core"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.4.0",
    "vsce": "^2.15.0"
  }
}
